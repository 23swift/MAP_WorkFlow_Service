            </div>
        </div>
	</div>
        

    </div>
</div>


<div class="row" style="margin:0;padding:0;">
    <div class="col-md-12" style="margin:0;padding:0;">
        <div class="btn-group float-right" role="group" aria-label="Basic example">
            @Html.ActionLink("Back", "Index", "Requests",null, new { @class = "btn btn-sm btn-primary" })
            @Html.ActionLink("Edit", "Edit", "Requests", new { id = Model.Id }, new { @class = "btn btn-sm btn-warning" })
            @*@Html.ActionLink("Submit For Checking", routeView, "RequestUIFlow", new { id = Model.Id }, new { @class = "btn btn-sm btn-primary" })*@
            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                Submit For Checking
            </button>
        </div>
    </div>
</div>
<div class="modal fade" data-backdrop="static" id="exampleModalCenter" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 20rem;">
        <div class="modal-content bg-warning">
            <div class="card-header">
                <div class="card-title text-white" id="exampleModalCenterTitle">Merchant Acquiring System</div>

            </div>
            <div class="card-body">
                <h4 class="card-title text-white"><i class="fa fa-exclamation-triangle"></i> Warning!</h4>
                <p class="card-text text-white">Are you sure you want to submit this request?</p>


            </div>
            <div class="modal-footer">
                @Html.ActionLink("Submit", routeView, "RequestUIFlow", new { id = Model.Id }, new { @class = "btn btn-sm btn-primary" })
                <button class="btn btn-sm btn-warning" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
