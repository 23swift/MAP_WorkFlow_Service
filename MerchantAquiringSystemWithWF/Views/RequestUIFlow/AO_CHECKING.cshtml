<hr style="margin-top:10px;" />



<div class="row" style="margin:0;padding:0; margin-top:10px;">
    <div class="col-md-12" style="margin:0; padding:0;">
        <div class="card bg-primary mb-3">
            <div class="card-header">
                @Html.ActionLink("+", "Create", "Branch", new { requestId = Model.Id }, new { @class = "btn btn-sm btn-warning float-right" })
                Branches
            </div>
            <table class="table table-condensed card-body">
                <thead>
                    <tr>
                        <th>

                            Branch name
                        </th>
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in branchList)
                    {
                        <tr>
                            <td>@item.DBAName</td>
                            <td>@item.dbaAddress1</td>
                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>

</div>
