@using MAS_WorkFlowService;
@model MerchantAquiringSystemWithWF.Models.RequestFormViewModel
@{
    //ViewBag.Title = "Details";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_TabedLayout.cshtml";
    string requesStatus = ViewBag.status as string;
    if (requesStatus.Equals(RequestStatusConstants.DRAFT)|| requesStatus.Equals(RequestStatusConstants.AO_CHECKING)) { Layout = "~/Views/Shared/_Layout.cshtml"; }
    else { Layout = "~/Views/Shared/_TabedLayout.cshtml"; }
    string returnRouteView = (string)ViewBag.returnAction;
    string submitRouteView = (string)ViewBag.submitAction;
    List<DA.Models.Branch> branchList = ViewBag.brnachList;
}

@*<h2>AO Checking</h2>*@
<div class="row clearfix-custom">
    <div class="form-header">
        <p class="header-title">
            @requesStatus

        </p>

    </div>
</div>
<div>
    <h4>@ViewBag.Title</h4>
    <hr />
    

    <div class="row">

        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.RequestType)
                </label>

                <div class="col-md-10">

                    @*@Html.DisplayFor(model => model.RequestType, new { htmlAttributes = new { @class = "form-control" } })*@
                    @ViewBag.Title

                </div>
            </div>
        </div>



        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.RequestDescription)
                </label>

                <div class="col-md-10">

                    @Html.DisplayFor(model => model.RequestDescription, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
        </div>



        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </label>

                <div class="col-md-10">

                    @Html.DisplayFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
        </div>



        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </label>

                <div class="col-md-10">

                    @Html.DisplayFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
        </div>



        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.WithRequirements)
                </label>

                <div class="col-md-10">

                    @Html.DisplayFor(model => model.WithRequirements, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
        </div>



        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.WithException)
                </label>

                <div class="col-md-10">

                    @Html.DisplayFor(model => model.WithException, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
        </div>



        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.eMail)
                </label>

                <div class="col-md-10">

                    @Html.DisplayFor(model => model.eMail, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
        </div>


    </div>
</div>
