@model IEnumerable<MerchantAquiringSystemWithWF.Models.ApprovalSetupViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Approval Matrix</h2>*@

<div class="row clearfix-custom" style="margin-top:5px;">
    <div class="form-header">
        <p class="header-title">
            Approval Matrix
        </p>

    </div>

</div>
<p style="margin:0;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApprovalCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rank)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WithRequirements)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WithException)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApprovalCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rank)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WithRequirements)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WithException)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
